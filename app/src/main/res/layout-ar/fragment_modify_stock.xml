<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/FLmodifStock"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.srdeveloppement.atelier.mypharmacy.Employee.ModifyStock.ModifyStock">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">
        <TextView
            android:id="@+id/no_item_found"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/no_item_found"/>
        <android.support.v7.widget.RecyclerView
            android:scrollbarThumbVertical="@drawable/sb_shape"
            android:id="@+id/modifStock_list"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</FrameLayout>
